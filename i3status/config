volume master {
   format = "Volume: %volume"
   format_muted = "Muted %volume"
   device = "default"
   mixer = "Master"
   mixer_idx = 0
}

cpu_usage {

format = "CPU %usage"

}

memory {
        format = "RAM: %used"
        threshold_degraded = "10%"
        format_degraded = "RAM: %free"  
           
}

